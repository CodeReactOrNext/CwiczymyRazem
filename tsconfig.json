{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "assets/*": ["./src/assets/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["./src/constants/*"],
      "feature/*": ["./src/feature/*"],
      "hooks/*": ["./src/hooks/*"],
      "layouts/*": ["./src/layouts/*"],
      "store/*": ["./src/store/*"],
      "styles/*": ["./src/styles/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"],
      "wrappers/*": ["./src/wrappers/*"]
    }
  },
  "include": [
    "src/**/*",
    "tailwind.config.js",
    "next-env.d.ts",
    "next-i18next.config.js",
    "tailwind.config.js",
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
